 *
 * @author Aluno
 */
public class JavaApplication9 {


    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Receita de Bombom de Leite Ninho
        double chocolateMeioAmargo = 0.4; // em kg
        double leiteCondensado = 0.395; // em kg
        double margarina = 0.04; // em kg
        double leiteEmPo = 0.05; // em kg
        double precoChocolateMeioAmargo = 1.0; // em reais por kg
        double precoLeiteCondensado = 2.0; // em reais por kg
        double precoMargarina = 1.0; // em reais por kg
        double precoLeiteEmPo = 1.0; // em reais por kg

        // Receita de Bombom de Café
        double cafeSolulvel = 0.1; // em kg
        double precoCafeSolulvel = 2.0; // em reais por kg

        // Receita de Bombom de Coco
        double cocoRalado = 0.3; // em kg
        double precoCocoRalado = 2.0; // em reais por kg

        System.out.println("Escolha a receita que deseja fazer:\n" +
                "1 - Bombom de Leite Ninho\n" +
                "2 - Bombom de Café\n" +
                "3 - Bombom de Coco");

        int escolhaReceita = scanner.nextInt();
        int numBombons = 0;
        double valorGasto = 0.0;

        switch (escolhaReceita) {
    case 1: // Receita de Bombom de Leite Ninho
